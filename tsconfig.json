{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
		"isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/js/**/*"],
  "exclude": ["node_modules", "src/js/sw.js", "**/*.spec.*"]
}
