{
  "name": "shooter",
  "version": "0.0.1",
  "description": "game",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf build/*",
    "run": "http-server build/ -s",
    "start": "npm-run-all -p watch:pug watch:js watch:less run",
    "build": "cp -R src/* build/ & npm run build:pug & npm run build:js & npm run build:less & wait",
    "build:js": "browserify src/js/main.js -t [ babelify ] --outfile build/js/main.js",
    "build:pug": "pug src/*.pug -o build/",
    "build:less": "lessc --source-map-map-inline src/css/main.less > build/css/main.css",
    "prepare": "npm run build",
    "watch:pug": "nodemon --watch src -e pug --exec 'npm run build:pug'",
    "watch:less": "nodemon --watch src/css -e less --exec 'npm run build:less'",
    "watch:js": "nodemon --watch src -e js --exec 'npm run build:js'",
    "watch": "npm run watch:pug & npm run watch:js & npm run watch:less",
    "test": "standard --fix"
  },
  "repository": {
    "type": "git"
  },
  "author": "Patrick Weygand",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/derduher/flaming-octo-meme/issues"
  },
  "homepage": "https://github.com/derduher/flaming-octo-meme",
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "http-server": "^0.10.0",
    "nodemon": "^1.3.7",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babelify": "^7.0.0",
    "browserify": "^14.4.0",
    "less": "^2.5.0",
    "npm-run-all": "^4.0.2",
    "pug": "^2.0.0-rc.3",
    "pug-cli": "^1.0.0-alpha6",
    "uglify-js": "^3.0.27"
  },
  "standard": {
    "globals": [
      "Path2D"
    ],
    "parser": "babel-eslint"
  }
}
